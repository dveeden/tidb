# Different number of decimals
SELECT FORMAT('1.234',1,'id_ID');
SELECT FORMAT('1.234',2,'id_ID');
SELECT FORMAT('1.234',3,'id_ID');
SELECT FORMAT('1.234',4,'id_ID');

# Nonexistend locale, should get a warning
SELECT FORMAT('1.234',1,'xxxxxx');
SHOW WARNINGS;

# Testing a few locales. Mostly those that don't follow other locales
SELECT FORMAT(100000.234,4,'nl_BE');
SELECT FORMAT(100000.234,4,'fr_BE');
SELECT FORMAT(100000.234,4,'en_IN');
SELECT FORMAT(100000.234,4,'de_CH');
SELECT FORMAT(100000.234,4,'no_NO');
SELECT FORMAT(100000.234,4,'bg_BG');
SELECT FORMAT(100000.234,4,'ar_SA');
SELECT FORMAT(100000.234,4,'es_MX');
SELECT FORMAT(100000.234,4,'ps_AF');
SELECT FORMAT(100000.234,4,'kv_RU');

# The first two should work fine, the third should give a warning.
--enable_warnings
SELECT FORMAT(100000.234,999999999999999999,'de_CH');
SELECT FORMAT(100000.234,9999999999999999999,'de_CH');
SELECT FORMAT(100000.234,99999999999999999999,'de_CH');
--disable_warnings

# NULL handling
SELECT FORMAT(NULL, 4), FORMAT(12332.2, NULL);
